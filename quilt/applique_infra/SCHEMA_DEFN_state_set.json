{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://json-schema.org/draft-07/schema#",
    "title" : "State Set JSON schema definition",
    "description" : "This scheme defines how a state set should be defined.",
    "schema_version" : 1.0,

    "definitions" : {
        "fq_timeseries" : {
            "type" : "object",
            "properties" : {
                "metric" : { "type" : "string" },
                "tags" : { "type" : "object" }
            }
        },

        "statement" : {
            "type" : "array",
            "items" : [
                { "type" : "string" },
                { "type" : "string",
                  "enum" : ["<", ">", "==", "<=", ">="] },
                {
                    "anyOf": [
                        { "type" : "number" },
                        { "type" : "integer" }
                    ]
                }
            ]
        },

        "state_defn" : {
            "type" : "object",
            "properties" : {
                "label" : { "type" : "string" },
                "expression" : {
                    "type" : "array",
                    "items": {
                        "$ref" : "#/definitions/statement"
                    }
                },
                "expression_operator" : { "const": "AND"}
            }
        }
    },

    "type" : "object",
    "properties" : {
        "name" : { "type" : "string" },
        "uuid" : { "type" : "string" },
        "state_definitions" : {
            "type" : "array",
            "items": {
                "$ref" : "#/definitions/state_defn"
            }
        },
        "input_timeseries" : {
            "type" : "object",
            "$ref" : "#/definitions/fq_timeseries"
        },
        "output_timeseries_template" : {
            "type" : "object",
            "$ref" : "#/definitions/fq_timeseries"
        }
    },
    "required" : ["name", "uuid", "state_definitions", "input_timeseries", "output_timeseries_template"]
}
